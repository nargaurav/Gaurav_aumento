<div class="about showroom_text_cls">
  <div class="Container">
    <header class="PageHeader">
      <div class="SectionHeader SectionHeader--center">
        {% if section.settings.show_title != blank %}
        <h1>{{ section.settings.show_title }}</h1>
        {% endif %}
      </div>
    </header>
    <div class="pera_text">
    	{% if section.settings.text != blank %}
      	<p>{{section.settings.text}}</p>
      	{% endif %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Text",
    "settings": [
	  {
        "type": "text",
        "id": "show_title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      }
	  
    ],
    "blocks": [

    ]
  }
{% endschema %}
/*================ Nav ================*/
.Header__Wrapper {
  @media (max-width: 1039px) {
    padding: 15px 18px;
  }
}
.Header {
  box-shadow: none;
  border: 0;

  .HorizontalList__Item {
    a {
      font-family: sofia-pro, sans-serif;
      font-size: 18px;
      text-transform: uppercase;
      letter-spacing: .07em;
      
      @media (max-width: 1000px) {
        font-size: 16px;
      }
    }
  }

  .HorizontalList__Item:hover {
    position: relative;

    &:before {
      content: '';
      width: 50px;
      height: 50px;
      border-radius: 50px;
      background: $mint;
      position: absolute;
      top: -9px;
      left: calc(50% - 25px);

      @media (max-width: 1250px) {
        width: 40px;
        height: 40px;
        left: calc(50% - 20px);
      }
    }

    a {
      position: relative;
      z-index: 2;
    }
  }
  
  .HorizontalList__Item.is-active {
    position: relative;

    &:before {
      content: '';
      width: 50px;
      height: 50px;
      border-radius: 50px;
      background: $mint;
      position: absolute;
      top: -9px;
      left: calc(50% - 25px);

      @media (max-width: 1250px) {
        width: 40px;
        height: 40px;
        left: calc(50% - 20px);
      }
    }

    a {
      position: relative;
      z-index: 2;
    }
  }

  .HorizontalList__Item:nth-child(1):hover, .HorizontalList__Item:nth-child(1).is-active {
    &:before {
      background: #B3B5DC;
    }
  }

  .HorizontalList__Item:nth-child(2):hover, .HorizontalList__Item:nth-child(2).is-active {
    &:before {
      background: #F4CBD5;
    }
  }

  .HorizontalList__Item:nth-child(3):hover, .HorizontalList__Item:nth-child(3).is-active {
    &:before {
      background: #BFDAF3;
    }
  }

  .menu-left .HorizontalList__Item:nth-child(1):hover, .menu-left .HorizontalList__Item:nth-child(1).is-active {
    &:before {
      background: #bbe8de;
    }
  }

  .menu-left .HorizontalList__Item:nth-child(2):hover, .menu-left .HorizontalList__Item:nth-child(2).is-active {
    &:before {
      background: #BFDAF3;
    }
  }

  .menu-left .HorizontalList__Item:nth-child(3):hover, .menu-left .HorizontalList__Item:nth-child(3).is-active {
    &:before {
      background: $mint;
    }
  }
  
  .HorizontalList__Item-shop {
    &:hover {
      .MegaMenu[aria-hidden=false] {
        //opacity: 1;
        //visibility: visible;
      }
    }
  }
  
  .Header__LogoLink {
    max-width: 200px;
  }
  
  @media screen and (min-width: 1140px) {
    .Header__LogoLink {
      max-width: 250px;
    }
    
    .link-shop {
      position: relative;
      
      &:after {
        left: -71px;
        position: absolute;
        content: '';
        height: 84px;
        width: 148px;
        top: -26px;
      }
    }
  }
}

/*================ Megamenu ================*/
.MegaMenu {
  border: 2px solid $light-purple;
  border-radius: 100%;
  width: 500px;
  height: 500px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffffd4;
  left: -115px;
  top: -70px;
  z-index: 999999999;
  
  .MegaMenu__Inner {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 0 40px 0 0;
    margin: 100px 0 0;
  }
  
  .MegaMenu__Inner--left {
    margin-left: 80px;
  }
  
  .MegaMenu__Heading {
    font-family: sofia-pro, sans-serif;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: .07em;
    font-weight: 500;
    margin-bottom: 15px;
  }
  
  .MegaMenu__Item  {
    margin: 0 0 5px;
    
    .MegaMenu__Title {
      font-family: baskerville-display-pt, serif;
      font-size: 16px;
      margin: 0;
      text-transform: none;
      letter-spacing: normal;
    }
    
    .MegaMenu__Title:hover {
      font-style: italic;
    }
  }
}

/*================ Mobile Menu ================*/
#sidebar-menu {
  width: 65%;
  max-width: 500px;
  min-width: 65%;
  /*
  width: 60vw;
  max-width: 500px;
  min-width: 350px;
  */
  height: calc(100% - 138px);
  top: 159px;
  max-height: calc(100% - 200px) !important;
  background-color: rgba(255,255,255,.95);
  z-index: 99999;
  
  @media (max-width: 1139px) {
    height: calc(100% - 143.5px);
    top: 57.66px;
  }
  
  .Drawer__Content::before {
    display: none;
  }
  
  .Drawer__Main::after {
    display: none;
  }
  
  .Drawer__Header {
    display: block;
    position: absolute;
    top: -80px;
    
    @media (max-width: 640px) {
      top: -60px;
    }
    
    .Drawer__Close {
      svg {
        width: 25px;
        height: auto;
        background: white;
        
        @media (max-width: 640px) {
          width: 20px;
        }
      }
    }
  }
  
  .Drawer__Content {
    padding-top: 20px;
  }
  
  .SidebarMenu__Nav {
    .Collapsible {
      border: 0;
    }
    
    .Link {
      text-align: left;
      font-family: 'baskerville-display-pt';
      font-size: 19px;
      text-transform: inherit;
      letter-spacing: .07em;
      font-weight: 500;
      padding: 0;
      margin-bottom: 10px;
      color: #000!important;
    }
  }

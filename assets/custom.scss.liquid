/*============================================================================
  General
==============================================================================*/

/*================ Colors ================*/
$light-purple: #afafde;
$mint: #bbe8de;

/*================ Breakpoints ================*/
$breakpoint: 768px;
$breakpoint-min: 769px;

/*================ Fonts ================*/
@import url("https://use.typekit.net/axi0aiv.css");  

@font-face {
    font-family: 'Darleston';
    src: url('{{ 'Darleston.woff2' | asset_url }}') format('woff2'),
         url('{{ 'Darleston.woff' | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal; 
}

@font-face {
  font-family: handwriting;
  src: url({{ 'HandWriting.ttf' | asset_url }});
}

body {
  font-family: sofia-pro, sans-serif;
}

h1 {
  font-family: handwriting, serif;
  font-size: 200px;
  text-transform: unset;
  line-height: 0.5;
  margin: 0;
  
  @media (max-width: $breakpoint) {
    font-size: 100px;
  }
}

h2 {
  font-family: sofia-pro, sans-serif;
  font-size: 30px;
  letter-spacing: .02em;
  text-transform: uppercase;
  font-weight: 500;
  margin: 0;
  
  &.large {
    font-size: 35px;
  }
  
  &.bold {
    font-weight: 700;
  }
  
  @media (max-width: $breakpoint) {
   	font-size: 24px; 
  }
}

h3 {
  font-family: baskerville-display-pt, serif;
  font-size: 25px;
  letter-spacing: .02em;
  line-height: 1.3;
  margin: 0;
  
  @media (max-width: $breakpoint) {
    font-size: 18px;
  }
}

h4 {
  font-family: sofia-pro, sans-serif;
  font-size: 22px;
  letter-spacing: .02em;
  text-transform: uppercase;
  line-height: 1.2;
  margin: 0;
  
  @media (max-width: $breakpoint) {
    font-size: 20px;
    line-height: 1;
  }
}

h5 {
  font-family: baskerville-display-pt, serif;
  font-size: 22px;
  letter-spacing: .02em;
  line-height: 1.2;
  margin: 0;
  
  @media (max-width: $breakpoint) {
    font-size: 18px;
  }
}

p  {
  font-family: baskerville-display-pt, serif;
  font-size: 18px;
  margin: 0;

  @media (max-width: $breakpoint) {
    font-size: 16px;
  }
}

.italic {
  font-style: italic;
}

/*================ Buttons ================*/
.Button {
  font-family: sofia-pro, sans-serif;
  font-size: 22px;
  letter-spacing: .02em;
  /*background: black;*/
  color: #000;
  border: 2px solid;
}

.Button--account {
  background: #000000;
  color: #ffffff;
}

/*================ Utility ================*/
.hide-mobile {
  @media (max-width: $breakpoint) {
    display: none;
  }
}

.hide-desktop {
  @media (min-width: $breakpoint-min) {
    display: none;
  }
}

.Container {
  padding: 0 60px;
  
  @media (max-width: $breakpoint) {
    padding: 0 24px;
  }
}


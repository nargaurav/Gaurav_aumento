/*================ Blocks ================*/
.blocks {
  display: flex;
  flex-wrap: wrap;
}

.blocks__item {
  position: relative;
  
  h2 {
    margin: 0;
    position: absolute;
    left: 30px;
    bottom: 30px;
    color: white;
    z-index: 2;
  }
}

.blocks__half {
  width: 50%;
  
  @media (max-width: $breakpoint) {
    width: 100%;
  }
  
  .AspectRatio {
    &:before {
      padding-bottom: 106%;
    }
    
    img {
      object-fit: cover;
      object-position: center;
    }
  }
}

.blocks__whole {
  width: 100%;
  padding-bottom: 78%;
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}


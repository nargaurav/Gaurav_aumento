  .Drawer__Footer {
    padding: 0;
    box-shadow: none;
    
    .Cart__NoteButton {
      display: none;
    }
    
    .Cart__Taxes {
      display: none;
    }
    
    .Cart__Checkout {
      margin-top: 0;
    }
    
    .Button--cart {
      border-top: 1px solid black;
      border-left: 1px solid black;
      border-right: 0;
      border-bottom: 0;
      background: transparent;
      color: #000;
      width: 100%;
    }

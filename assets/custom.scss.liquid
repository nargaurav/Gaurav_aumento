    display: none;
    
    @media (max-width: $breakpoint) {
      display: initial;
      position: absolute;
      top: 10px;
    }
  }
  
  .Drawer__Header {
    display: none;
  }
  
  .Cart__Empty {
    font-family: sofia-pro, sans-serif;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: .07em;
  }
  
  .Drawer__Container {
    padding-left: 20px;
    padding-right: 24px;
    padding-bottom: 30px;
  }
  
  .Drawer__Content {
    height: 100%;
    max-height: 100%;
  }
  
  .CartItem {
    margin: 30px 0 0 30px;
    position: relative;
    
    .CartItem__ImageWrapper {
      border: 1px solid black;
    }
    
    .CartItem__Title {
      white-space: inherit;
      font-size: 15px;
      letter-spacing: normal;
    }      
    
    .CartItem__Variant {
      display: none;
    }
    
    .CartItem__PriceList {
      font-family: baskerville-display-pt, serif !important;
      font-size: 16px !important;
      letter-spacing: .02em !important;
    }
    
    .CartItem__PropertyList {
      font-style: normal;  
    }
    
    .CartItem__QuantitySelector {
      display: none;
    }
    
    .CartItem__Remove {
      position: absolute;
      left: -30px;
      top: 0;
      margin: 0;
      
      img {
        width: 18px;
        height: auto;
      }
      
      &:before {
        display: none; 
      }

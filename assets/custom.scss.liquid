}
.customer-care__nav {
  padding: 40px 0;
  margin-bottom: 40px;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  
  @media (max-width: $breakpoint) {
    flex-wrap: wrap;
    justify-content: center;
    padding-bottom: 0;
    margin-bottom: 20px;
    padding-top: 0;
  }
  
  .nav-item {
    margin-right: 50px;
    position: relative;
    cursor: pointer;
    
    @media (max-width: $breakpoint) {
      margin-bottom: 26px;
      margin-right: 0;
      width: 100%;
    }
    
    h4 {
      font-weight: 500;
      
      @media (max-width: $breakpoint) {
        text-align: left;
        
      }
    }
  }
  
  .nav-item.active {
    &:before {
      position: absolute;
      content: '';
      width: 80px;
      height: 80px;
      top: calc(50% - 40px);
      left: calc(50% - 40px);
      background-color: #ffc7d3;
      border-radius: 100%;
      z-index: -1;
      
      @media (max-width: $breakpoint) {
        width: 60px;
        height: 60px;
        top: calc(50% - 30px);
        left: calc(50% - 194px);
      }
    }
  }

  .nav-item:nth-child(2).active {
    &:before {
      background-color: #BFDAF3;
    }
  }

  .nav-item:nth-child(3).active {
    &:before {
      background-color: $mint;
    }
  }

  .nav-item:nth-child(4).active {
    &:before {
      background-color: #B3B5DC;
    }
  }

  .nav-item:nth-child(5).active {
    &:before {
      background-color: #ffc7d3;
    }
  }
}


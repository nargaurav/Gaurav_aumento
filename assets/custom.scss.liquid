/*============================================================================
  Footer
==============================================================================*/
.Footer {
  margin-top: 80px;
  border-top: 1px solid black !important; 
  
  @media (max-width: $breakpoint) {
    margin-top: 50px;
  }
  
  .Footer__Inner {
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    
    @media (max-width: $breakpoint) {
      display: block;
    }
  }
}
  
.Footer__Block { 
  margin-top: 40px;
  padding-left: 0 !important;
  
  .Footer__Title {
    font-family: sofia-pro, sans-serif;
    font-size: 22px;
    text-transform: uppercase;
    font-weight: 500;
    
    @media (max-width: $breakpoint) {
      font-size: 19px;
      text-align:center;
      line-height: 9px;
      
    }
    
  }
  
  .Link, .Footer__Content p {
    font-family: baskerville-display-pt, serif;
    font-size: 18px;
    
    @media (max-width: $breakpoint) {
      font-size: 19px;
      text-align:center;
      
    }
  }
}

.Footer__Block:first-child {
  /*margin-top: 40px;*/
  margin: 40px auto;
}

.Footer__Block--links {
  flex: 1 1 100%;
  text-align:center;
  
  @media (min-width: $breakpoint) {
    flex: 1 1 25%;
    text-align:center;
  }
  
  @media (min-width: 1140px) {
    flex: 0 1 auto;
    text-align:left;
  }
}

.Footer__Block--newsletter {
  flex-basis: 500px;
  max-width: 500px;
  
  .Footer__Title {
    font-family: handwriting, serif;
    font-size: 100px;
    text-transform: unset;
    line-height: 0.7;
    
    @media (max-width: $breakpoint) {
      font-size: 83px;
      text-align:center;
      
    }
  }
  
 
  
  .newsletter__form-container {
    position: relative;
  }
  
  input {
    padding: 8px 10px;
    border: 1px solid black !important;
    font-family: sofia-pro, sans-serif;
    font-size: 16px;
    text-transform: uppercase;
    font-weight: 500;
    
    @media (max-width: $breakpoint) {
      font-size: 15px;
      
      
    }
    
    &::placeholder {
	  opacity: .4;      
    }
  }
  
  .Form__Submit {
    padding: 0 10px;
    margin: 0;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: .4;
    
    path {
      stroke-width: 1px;
    }
  }
}

.Footer__StoreName {
  font-family: sofia-pro, sans-serif;
  font-size: 22px;
  text-transform: uppercase;
  font-weight: 500;
}

/*============================================================================
  Cart Drawer
==============================================================================*/
.PageOverlay {
  background: transparent;
}

.Drawer::before {
  box-shadow: none;
}

#sidebar-cart {
  background: rgba(255,255,255,0.9);
  max-height: calc(100% - 200px) !important;
  height: calc(100% - 149.5px);
  top: 149.5px;
  width: 75vw;

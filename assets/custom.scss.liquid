/*================ Collection ================*/

.CollectionMain {
  max-width: 1200px;
  margin: 0 auto;
}

.CollectionMain2 {
  max-width: 95%;
  margin: 0 auto;
}

.collection-grid {
  margin: 125px 0;
  overflow: hidden;
  
  @media (max-width: $breakpoint) {
    margin: 30px 0;
  }
}

.collection-grid__container {
  margin-left: -8%;
  margin-right: -8%;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 10px;
  
  @media (max-width: $breakpoint) {
    grid-gap: 0;
  }
}

.collection-grid__item {
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  text-align: center;
  
  .AspectRatio {
    &:before {
      padding-bottom: 100%;
    }
    
    img {
      object-fit: cover;
      object-position: center;
    }
  }
  
  h2 {
    bottom: 15%;
    position: absolute;
    color: white;
    text-align: center;
    left: 0;
    right: 0;
    
    @media (max-width: $breakpoint) {
      font-size: 14px;
      max-width: min-content;
      margin: 0 auto;
      bottom: unset;
      top: 82px;
    }
  }
}


.collection-toolbar-custom {
  flex-direction: row !important;
  box-shadow: none !important;
  
  .CollectionToolbar__Group {
    width: 100%;
    justify-content: space-between;
    flex-direction: unset;
    cursor: pointer;

    Button {
      width: 175px;
      max-width: 175px;
      border-left: none;
      font-size: 24px;
      font-family: sofia-pro, sans-serif;
      padding: 0;

      svg {
        display: none;
      }
    }
  }
  
  @media (max-width: $breakpoint) {
    margin-top: 30px;
    
    .CollectionToolbar__Item--filter {
      text-align: left;
    }
    .CollectionToolbar__Item--sort {
      text-align: right;
    }
  }
}


#collection-sort-popover{
  box-shadow: none;
  opacity: 1;
  background: rgba(255,255,255,0.9);
  
  .Popover__ValueList {
    padding: 0;
  }
}

#collection-sort-popover:before{
  display: none;
}

.custom-filter {
  width: fit-content;
  position: absolute;
  z-index: 5;
  display: none;
  background-color: rgba(255,255,255, 1);
  padding: 10px 50px 50px 51px;
  
  @media (max-width: 640px) {
    width: 100%;
    padding: 10px 20px 10px 0px;
  }
  
  div {
    .Collapsible {
      padding-left: 0;
      padding-right: 80px ;
      
      @media (max-width: $breakpoint) {
        padding: 0;
        
        .Collapsible__Button {
          padding: 10px 0;
          
          + .Collapsible__Inner {
          	padding: 0px 0px 0px 15px;
          }
        }
      }

      .Heading {
        font-size: 24px;
        font-family: sofia-pro, sans-serif;
        
        @media (max-width: 640px) {
          font-size: 18px;
        }
      }

      .ColorSwatchList {
        display: flex;
        flex-wrap: wrap;
        max-width: 300px;

        .HorizontalList__Item {
          margin-right: 5px;
          margin-left: 5px;
          display: flex;

			.ColorSwatch {
              background-color: unset !important;
            }
        }
      }

      .Linklist__Item {
        margin-bottom: 5px;
        
        .Text--subdued {
          font-family: baskerville-display-pt, serif;
          font-size: 20px;

          @media (max-width: 640px) {
            font-size: 15px;
          }
        }
      }
    }

    @media (max-width: 640px) {
      flex-direction: column;
    }
  }

  .ButtonGroup {
    justify-content: flex-start;

    .filter-buttons {
      background-color: #C5D9F3;
      padding-top: 5px;
      padding-bottom: 7px;
      border: none;
      max-width: 200px;
    }

    @media (max-width: 640px) {

  font-size: 20px !important;
  padding-top: 5px;
  padding-bottom: 5px;
  
  @media (max-width: 640px) {
    font-size: 16px !important;
  }
}

/*================ Featured ================*/
.featured-items {
  margin: 125px 0;
  
  @media (max-width: $breakpoint) {
    margin: 30px 0;
  }
}

.featured-items__container {
  .slick-arrow {
    position: absolute;
    top: calc(50% - 25px);
    z-index: 2;
    max-width: 15px;
    
    @media (max-width: $breakpoint) {
      max-width: 10px;
    }
  }
  
  .slick-prev {
    left: -20px;
    
    @media (max-width: $breakpoint) {
      left: -15px;
    }
  }
  
  .slick-next {
    right: -20px;
    
    @media (max-width: $breakpoint) {
      right: -15px; 
    }
  }
}

.featured-items__product {
  padding: 0 10px;
